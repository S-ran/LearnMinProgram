<!--pages/text/text.wxml-->
<text></text>

<!-- 1-基本使用 -->
<text>你好\n</text>
<text>李银河\n</text>

<!-- 2-selectable:true -->
<!-- 默认情况下text中的文本是不能选中的 -->
<text selectable="{{true}}">漩涡鸣人\n</text>
<text selectable>漩涡鸣人\n</text>

<!-- 3-space:决定文本空格的大小 -->
<text>李银 河\n</text>
<!-- 根据字体设置的大小 -->
<text space="nbsp">李银       河\n</text>
<!-- 一个字符大小 -->
<text space="emsp">李银 河\n</text>
<!-- 半个字符大小 -->
<text space="ensp">李银 河\n</text>

<!-- 4-decode属性:是否解码文本 -->
<text>5 &gt; 3\n</text>
<text decode>5 &gt; 3</text>