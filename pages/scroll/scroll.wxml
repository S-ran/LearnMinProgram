<!--pages/scroll/scroll.wxml-->
<!-- 1.水平滚动 -->
<scroll-view class="box" scroll-x> 
      <view class="item" wx:for="{{100}}">{{item}}-</view>
</scroll-view>
<!-- 2.垂直滚动 -->
<scroll-view class="box1" scroll-y> 
      <view class="item" wx:for="{{100}}">{{item}}-</view>
</scroll-view>
<!-- 3.事件绑定 -->
<scroll-view class="box" scroll-x bindscroll="onscroll" scroll-top="0"> 
      <view class="item" wx:for="{{100}}">{{item}}-</view>
</scroll-view>
<!-- upper-threshold 距顶部/左边多远时，触发 scrolltoupper 事件	
     lower-threshold 距底部/右边多远时，触发 scrolltolower 事件	 -->